<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> rating: <%= review.rating %>/5</li>
  <% end %>
</ul>
<br>
<div>
  <%= link_to "Back to restaurants", restaurants_path , class: "btn btn-primary"%>
  <%= link_to "add a review", new_restaurant_review_path(@restaurant) , class: "btn btn-primary"%>
</div>
